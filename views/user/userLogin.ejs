<%- include('../partials/header') %>
    <div class="d-flex justify-content-center">
        <div class="container bg-white py-5 m-2 d-flex flex-column justify-content-center ">

            <h1 class="title text-center pb-2">Iniciar sesion</h1>

            <form class="border-top border-secondary p-5" action="/user/login" method="POST">


                <% if (locals.errors && errors.name) { %>
                    <span class="barra text-danger">
                        <%= errors.name.msg %>
                    </span>
                    <% } %>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                 <% if (locals.errors && errors.email) { %>

                                    <span class="barra text-danger p-2">
                                        <%= errors.email.msg %>
                                    </span>
                                    <% } %>

                                        <label for="floatingInput">Email:</label>
                                        <input class="form-control" id="floatingInput" type="email"
                                            name="email" value="<%= locals.oldData ? oldData.email : null %>">

                            </div>
                            <div class="form-group col-md-6">

                                <% if (locals.errors && errors.password) { %>

                                    <span class="barra text-danger p-2">
                                        <%= errors.password.msg %>
                                    </span>
                                    <% } %>
                                        <label for="password">Contrase√±a:</label>
                                        <input class="form-control" id="floatingInput"
                                            type="password" name="password">
                            </div>
                        </div>
                        <div class="d-flex justify-content-center p-3">
                            <button style="background-color: #373e98; border: none;" class="btn btn-primary my-3"
                                type="submit">Iniciar sesion</button>
                        </div>
            </form>
        </div>
    </div>
