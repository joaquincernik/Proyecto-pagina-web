<%- include('../partials/header')  %>

<div class="register_box_father">
<h1>Crear usuario</h1>

<form class="register_box" action="/user/register" method="POST">
    
    <% if (locals.errors && errors.name) { %>
        <span class="barra">
            <%= errors.name.msg %>
        </span>
        <% } %>
    <label for="name">Nombre de usuario:</label>
    <input style="width: 15%;" class="form-control" id="floatingInput" type="text" name="name" value="<%= locals.oldData ? oldData.name : null %>">

    <% if (locals.errors && errors.email) { %>
        <span class="barra">
            <%= errors.email.msg %>
        </span>
        <% } %>
    <label for="email">Email:</label>
    <input style="width: 15%;" class="form-control" id="floatingInput" type="email" name="email" value="<%= locals.oldData ? oldData.email : null %>">

    <% if (locals.errors && errors.address) { %>
        <span class="barra">
            <%= errors.address.msg %>
        </span>
        <% } %>
    <label for="address" >Direccion:</label>
    <input style="width: 15%;" class="form-control" id="floatingInput" type="text" name="address" value="<%= locals.oldData ? oldData.address : null %>">

    <% if (locals.errors && errors.password) { %>
        <span class="barra">
            <%= errors.password.msg %>
        </span>
        <% } %>
    <label for="password">Password:</label>
    <input style="width: 15%;" class="form-control" id="floatingInput" type="password" name="password" >

    <button type="submit">Crear</button>

</form>
</div>

<%- include('../partials/footer')  %>