<%- include('../partials/header') %>

    <div class="d-flex justify-content-center">
        <div class="container bg-white py-5 m-2 d-flex flex-column justify-content-center ">

            <h1 class="title text-center pb-2">Registrarme</h1>

            <form class="border-top border-secondary p-5" action="/user/register" method="POST">


                <% if (locals.errors && errors.name) { %>
                    <span class="barra text-danger">
                        <%= errors.name.msg %>
                    </span>
                    <% } %>

                        <div class="form-row">
                            <div class="form-group col-md-6 px-3">
                                <label for="name">Nombre y apellido:</label>
                                <input id="floatingInput" type="text" name="name" class="form-control"
                                    value="<%= locals.oldData ? oldData.name : null %>">

                                <% if (locals.errors && errors.email) { %>
                                    <span class="barra text-danger">
                                        <%= errors.email.msg %>
                                    </span>
                                    <% } %>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">Email:</label>
                                <input id="floatingInput"
                                    placeholder="Email para ponernos en contacto con el envio de tus fotos" type="email"
                                    class="form-control" name="email"
                                    value="<%= locals.oldData ? oldData.email : null %>">

                                <% if (locals.errors && errors.address) { %>
                                    <span class="barra text-danger">
                                        <%= errors.address.msg %>
                                    </span>
                                    <% } %>
                            </div>
                        </div>


                        <div class="form-row">
                            <div class="form-group col-md-6 px-3">
                                <label for="address">Direccion:</label>
                                <input class="form-control" placeholder="Direccion a donde te enviaremos tus fotos"
                                    id="floatingInput" type="text" name="address"
                                    value="<%= locals.oldData ? oldData.address : null %>">

                                <% if (locals.errors && errors.password) { %>
                                    <span class="barra text-danger">
                                        <%= errors.password.msg %>
                                    </span>
                                    <% } %>
                                        <% if (locals.errors && errors.email) { %>
                                            <span class="barra text-danger">
                                                <%= errors.email.msg %>
                                            </span>
                                            <% } %>
                            </div>
                            <div class="form-group col-md-6">

                                <label for="password">Contrase√±a:</label>
                                <input id="floatingInput" type="password" class="form-control" name="password">
                            </div>
                        </div>


                        <div class="d-flex justify-content-center p-3">
                            <button style="background-color: #373e98; border: none;" class="btn btn-primary my-3"
                                type="submit">Registrarme</button>
                        </div>
            </form>
        </div>
    </div>
    <%- include('../partials/footer') %>