<%- include('../partials/header')  %>

<% let i=1 %>
<h1 id="album_name"><%= album.name %></h1>
<div class="d-flex justify-content-center">
<div class="col-md-7">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
    <% album.photos.map(photo=> {%>
        <% if(i==1){%>
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/<%= photo.link %>" alt="First slide">
              </div>
            <% } else{%>

        
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/<%= photo.link %>" alt="Second slide">
              </div>
            <% }%>
      
        <% i++ %>
    <%}); %>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div> 
</div>
 
</div>
<form method="POST" enctype="multipart/form-data" action="/albums/admin/create/addPhoto/<%= album.album_id %>">
    <input class="fyle" type="file" accept=".jpg, .png, .jpeg, .svg" name="images" multiple>
    <button class="admin-button" type="submit">AGREGAR FOTO/S</button>
</form>
<%- include('../partials/footer')  %>
