<%- include('../partials/header')  %>

<% let i=0; let end=1; %>

<% let indexOfBegginng = album.photos.findIndex((element) => element.photo_id == begginingPhoto)%>
<h1 id="album_name"><%= album.name %></h1>
<div class="d-flex justify-content-center">
<div class="col-md-7">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
    <% album.photos.map(photo=> {%>
        <% if(i==indexOfBegginng){%>
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/<%= photo.link %>">
                <p class="text-center p-2"><%= photo.link %></p>

              </div>
            <% } else{%>

        
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/<%= photo.link %>">
                <p class="text-center p-2"><%= photo.link %></p>
              </div>
              <% end++ %>
           
            <% }%>
            <% i++ %>

    
    <%}); %>
    
   
   
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div> 
</div>
 
</div>
<% if(!locals.isLogged){ %>
  <h2 id="ask-login-h2">Registrate para pedir tus fotos!</h2>
      <% }else{ %>
          <div class="pedido-button-father">
          <div class="pedido-button">
              <button  class="pedido-button"><a class="pedido-button" href="/orders/create/<%= album.album_id %>">Haz tu pedido</a></button>
          </div>
      </div>
          <% } %>
  
